<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Style/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <table class="wrapper" cellpadding="0" cellspacing="0">
        <tr>
            <td colspan="3" class="header"> Kist College</td>
        </tr>
        <tr>
            <td class="leftmenu">
                <table cellpadding="0" cellspacing="0" style="width:100%">
                    <tr>
                        <td class="menucell">
                            @Html.ActionLink("Home","Index","Home",null, new { @class = "menu" })
                        </td>
                    </tr>
                    <tr>
                        <td class="menucell">
                            @Html.ActionLink("Author", "Index", "Author", null, new { @class = "menu" })
                        </td>
                    </tr>
                </table>
            </td>
            <td class="container">
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td colspan="3" class="footer">&copy;Kist College 2018</td>
        </tr>
    </table>
</body>
</html>