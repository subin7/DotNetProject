@model FinalKist.Models.Entity.AuthorEntity
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">New Author</h3>
<hr style="width :100%;color :#008080;" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Id)
    <table>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.FirstName)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.FirstName, new { @Value = "aaa" })
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.LastName)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.LastName)
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.Phone)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.Phone)
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.Email)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.Email)
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.Qualification)
            </td>
            <td width="200px">
                @Html.DropDownListFor(m => m.Qualification, new List<SelectListItem>
                    {
                        new SelectListItem { Text="Masters", Value="Masters" },
                        new SelectListItem { Text="Bachelors", Value="Bachelors" },
                        new SelectListItem { Text="PLC/+2", Value="PCL" },
                        new SelectListItem { Text="SLC", Value="SLC" }
           }, new { @style = "width: 174px;" })
            </td>
        </tr>
        <tr>
            <td width="100px"></td>
            <td width="200px">
                <input type="submit" value="Edit" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Back to Manager", "Index", "Author", null, new { @class = "menu" })
</p>

