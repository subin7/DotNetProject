@model IEnumerable<FinalKist.Models.Entity.AuthorEntity>
@{
    ViewBag.Title = "Authors";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">Authors Manager</h3>
<hr style="width :100%;color :#008080;" />
<p>
    @Html.ActionLink("New Author", "Create", null, new { @class = "menu" })
</p>
<table width="100%" cellspacing="0">
    <tr>
        <th>@Html.DisplayNameFor(m=> m.FirstName)</th>
        <th>@Html.DisplayNameFor(m => m.LastName)</th>
        <th>@Html.DisplayNameFor(m => m.Email)</th>
        <th>@Html.DisplayNameFor(m => m.Qualification)</th>
        <th>Options</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(mi => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(mi => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(mi => item.Email)
            </td>
            <td>
                @Html.DisplayFor(mi => item.Qualification)
            </td>
            <td width="150px">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id.Trim() },new { @class = "menu" }) |
                @Html.ActionLink("Details", "Details", "Author",new { id = item.Id.Trim() }, new { @class = "menu" }) |
                @Html.ActionLink("Delete", "DeleteAuthor","Author", new { id = item.Id.Trim() }, 
               new { @class = "menu" ,
                @onclick = "return confirm('Are you sure you wish to delete this author?');" }
               )
            </td>
        </tr>
    }
    </table>
    <hr style="width :100%;color :#008080;" />
    <p>
        @Html.ActionLink("New Author", "Create", null, new { @class = "menu" })
    </p>

